{
  "name": "bun-boilerplate",
  "description": "A boilerplate for creating a bun project",
  "author": "Batuhan Korur <mail@batuhan.io> (https://batuhan.io)",
  "license": "MIT",
  "version": "1.0.0",
  "type": "module",
  "module": "server.ts",
  "keywords": [
    "bun",
    "boilerplate",
    "typescript"
  ],
  "scripts": {
    "dev": "bun run --watch server.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "bun test"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@stylistic/eslint-plugin": "^2.12.1",
    "@types/bun": "^1.1.14",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "globals": "^15.14.0",
    "typescript-eslint": "^8.18.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "module-name-mapper": {
    "^@/(.*)": "src/$1"
  }
}
